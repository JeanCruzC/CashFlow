{
  "name": "cashflow",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "vercel:preflight": "node scripts/vercel-preflight.mjs",
    "vercel:env:pull:preview": "npx vercel env pull .env.vercel.preview.local --environment=preview",
    "vercel:env:pull:production": "npx vercel env pull .env.vercel.production.local --environment=production",
    "vercel:deploy:preview": "npx vercel pull --yes --environment=preview && npx vercel build && npx vercel deploy --prebuilt",
    "vercel:deploy:prod": "npx vercel pull --yes --environment=production && npx vercel build --prod && npx vercel deploy --prebuilt --prod",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "check:migrations": "node scripts/check-migrations.mjs",
    "test": "vitest run tests/unit",
    "test:all": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:critical": "vitest run tests/unit --config vitest.critical.config.ts --coverage",
    "test:e2e": "playwright test",
    "test:e2e:smoke": "playwright test tests/e2e/public-smoke.spec.ts",
    "test:e2e:auth": "playwright test tests/e2e/auth-onboarding-transactions.spec.ts",
    "test:e2e:a11y": "playwright test tests/e2e/accessibility.spec.ts",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:install": "playwright install chromium",
    "security:audit": "npm audit --omit=dev --audit-level=high",
    "smoke:check": "node scripts/smoke-check.mjs",
    "supabase:check:remote": "node scripts/check-supabase-remote.mjs",
    "supabase:auth:sync": "node scripts/sync-supabase-auth.mjs",
    "supabase:migrate:remote": "./scripts/supabase-db-push-remote.sh",
    "seed:test": "node scripts/seed-test-fixtures.mjs",
    "ops:backup": "./scripts/backup-supabase.sh",
    "ops:restore": "./scripts/restore-supabase.sh",
    "ci:quality": "npm run check:migrations && npm run lint && npm run typecheck && npm run test && npm run test:coverage:critical && npm run build"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.39.0",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.97.0",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/react-virtual": "^3.13.18",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "clsx": "^2.1.1",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.575.0",
    "next": "^14.2.35",
    "next-intl": "^4.8.3",
    "next-mdx-remote": "^6.0.0",
    "react": "^18",
    "react-dom": "^18",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.5.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "engines": {
    "node": ">=20.0.0 <23"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@playwright/test": "^1.58.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.35",
    "jsdom": "^22.1.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vitest": "^1.6.1"
  }
}
